{
	"extends": [
		"config:base",
		":rebaseStalePrs",
		":timezone(Europe/London)"
	],
	"enabledManagers": [
		"npm",
		"dockerfile",
		"docker-compose",
		"github-actions",
		"cargo"
	],
	"cargo": {
		"labels": [
			"dependencies",
			"rust"
		],
		"rangeStrategy": "bump",
		"bumpVersion": "patch",
		"automerge": false,
		"updateLockFiles": true,
		"packageRules": [
			{
				"description": "merge minor and patch updates into a single PR",
				"groupName": "rust - all minor and patch updates",
				"extends": [
					"schedule:automergeNonOfficeHours"
				],
				"matchUpdateTypes": [
					"minor",
					"patch"
				]
			}
		]
	},
	"npm": {
		"labels": [
			"dependencies",
			"npm"
		],
		"extends": [
			":unpublishSafe",
			"helpers:disableTypesNodeMajor"
		],
		"rangeStrategy": "bump",
		"bumpVersion": "patch",
		"automergeType": "pr",
		"updateLockFiles": true,
		"major": {
			"automerge": false
		},
		"packageRules": [
			{
				"description": "merge minor and patch updates into a single PR",
				"groupName": "npm - all minor and patch updates",
				"extends": [
					"schedule:automergeNonOfficeHours"
				],
				"matchUpdateTypes": [
					"minor",
					"patch"
				],
				"automerge": true,
				"stabilityDays": 3
			},
			{
				"description": "disable package.json > engines update",
				"depTypeList": [
					"engines"
				],
				"enabled": false
			}
		]
	},
	"github-actions": {
		"labels": [
			"dependencies",
			"github-actions"
		],
		"groupName": "GitHub Actions - updates",
		"packageRules":[
			{ "matchUpdateTypes": ["major"],
			  "matchPackageNames": [
					"actions/checkout",
					"actions/setup-node",
					"actions/setup-python",
					"actions/cache"
				],
				"automerge": true,
				"groupName": "Github-Actions - trusted major updates",
				"extends": [
					"schedule:automergeNonOfficeHours"
				]
				}
		]
	},
	"packageRules": [
		{
			"matchManagers": [
				"dockerfile",
				"docker-compose"
			],
			"groupName": "Docker - updates",
			"labels": [
				"dependencies",
				"docker"
			]
		}
	]
}
