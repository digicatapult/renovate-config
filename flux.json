{
    "baseBranches": [
        "main"
    ],
    "extends": [
        ":timezone(Europe/London)"
    ],
    "onboarding": false,
    "requireConfig": "optional",
    "prHourlyLimit": 20,
    "prConcurrentLimit": 20,
    "recreateWhen": "always",
    "flux": {
        "labels": [
            "dependencies",
            "flux"
        ],
        "managerFilePatterns": [
            "/^clusters/.*\\.ya?ml$/"
        ],
        "packageRules": [
            {
                "matchManagers": [
                    "flux"
                ],
                "pinDigests": false
            },
            {
                "matchManagers": [
                    "flux"
                ],
                "schedule": [
                    "* 9,10,11,12,13,14,15,16,17 * * *"
                ]
            },
            {
                "matchManagers": [
                    "flux"
                ],
                "matchFileNames": [
                    "^clusters/kind-cluster/.*\\.ya?ml$"
                ],
                "automerge": true,
                "addLabels": [
                    "automerge",
                    "kind"
                ],
                "separateMajorMinor": true,
                "separateMultipleMajor": true
            },
            {
                "matchManagers": [
                    "flux"
                ],
                "matchFileNames": [
                    "^(?!clusters/kind-cluster/).*\\.ya?ml$"
                ],
                "automerge": false,
                "addLabels": [
                    "production"
                ],
                "separateMajorMinor": true,
                "separateMultipleMajor": true
            }
        ]
    },
    "github-actions": {
        "labels": [
            "dependencies",
            "github-actions"
        ],
        "groupName": "GitHub Actions - updates",
        "packageRules": [
            {
                "matchUpdateTypes": [
                    "major"
                ],
                "matchPackageNames": [
                    "actions/checkout",
                    "actions/cache"
                ],
                "automerge": true,
                "groupName": "Github-Actions - trusted major updates",
                "extends": [
                    "schedule:automergeNonOfficeHours"
                ],
                "addLabels": [
                    "automerge"
                ]
            }
        ]
    }
}